<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mcgill.ecse321.ecse321_group7">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".User_login"
            android:label="@string/title_activity_user_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User_Signup"
            android:label="@string/title_activity_user__signup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Profile_page"
            android:label="@string/title_activity_profile_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Trip_Search"
            android:label="@string/title_activity_trip_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TripSearchResult"
            android:label="TripSearchResult"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Trip_Details"
            android:label="Trip_Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Trip_Edit"
            android:label="Trip_Edit"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".Trip_Create"
            android:label="Trip_Create"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>